<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"

            >



            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_login_vec"
                />

            <TextView
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DÃ©brouillard Sign Up"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="25dp"/>






            <androidx.cardview.widget.CardView


                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/post_title"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:textSize="15dp"
                        android:textStyle="bold|italic"
                        android:text="Email" />

                    <EditText
                        app:backgroundTint="@color/home_color"
                        android:id="@+id/signup_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15dp"
                        android:hint="Email"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/post_Des"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:textSize="15dp"
                        android:textStyle="bold|italic"
                        android:text="Name" />

                    <EditText
                        app:backgroundTint="@color/home_color"
                        android:id="@+id/signup_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15dp"
                        android:hint="Name"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/post_price"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:textSize="15dp"
                        android:textStyle="bold|italic"

                        android:text="Password" />

                    <EditText
                        app:backgroundTint="@color/home_color"
                        android:inputType="textPassword"
                        android:id="@+id/signup_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15dp"
                        android:hint="Password"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:textSize="15dp"
                        android:textStyle="bold|italic"

                        android:text="Number" />

                    <EditText
                        app:backgroundTint="@color/home_color"
                        android:inputType="number"
                        android:id="@+id/signup_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15dp"
                        android:hint="Ph. Number"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>









            <LinearLayout
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                >



                <Button
                    android:id="@+id/signup_main_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/detail_button"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="Sign Up"
                    android:textColor="@color/white"

                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>